{
  "name": "certstudy-community",
  "version": "1.0.0",
  "description": "Knowledge-sharing community for certification exams",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:server": "cd server && npm install --production",
    "start:prod": "cd server && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "deploy:prep": "npm run build && npm run build:server"
  },
  "keywords": ["certification", "study", "community", "education"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}